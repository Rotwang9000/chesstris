{
	"name": "shaktris",
	"version": "1.0.0",
	"description": "A multiplayer game that fuses elements of chess and Tetris",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node server.js",
		"dev": "nodemon --ignore 'game-state.json' --ignore 'public/**/*' server.js",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testEnvironment=node"
	},
	"keywords": [
		"chess",
		"tetris",
		"game",
		"multiplayer",
		"3d",
		"threejs"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"mongo": "^0.1.0",
		"mongodb": "^6.14.2",
		"mongoose": "^8.12.1",
		"redis": "^4.7.0",
		"socket.io": "^4.7.2",
		"three": "^0.174.0",
		"util": "^0.12.5",
		"uuid": "^9.0.1",
		"whatwg-url": "^14.1.1"
	},
	"devDependencies": {
		"@solana/web3.js": "^1.98.0",
		"bcrypt": "^5.1.1",
		"bcryptjs": "^2.4.3",
		"chai": "^5.2.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jsonwebtoken": "^9.0.2",
		"node-fetch": "^2.7.0",
		"nodemon": "^3.0.1",
		"sanitize-html": "^2.14.0",
		"sinon": "^19.0.2",
		"socket.io-client": "^4.7.4",
		"supertest": "^6.3.3",
		"ua-parser-js": "^2.0.2"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"jest": {
		"transform": {},
		"moduleNameMapper": {
			"^(\\.{1,2}/.*)\\.js$": "$1"
		},
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"/node_modules/",
			"<rootDir>/public/utils/__tests__/"
		],
		"setupFiles": [
			"./tests/setup-jest.js"
		],
		"transformIgnorePatterns": [
			"node_modules/(?!(uuid)/)"
		],
		"testMatch": [
			"**/__tests__/**/*.js",
			"**/?(*.)+(spec|test).js"
		],
		"globals": {
			"NODE_ENV": "test"
		},
		"moduleDirectories": [
			"node_modules",
			"src"
		],
		"verbose": true
	}
}
